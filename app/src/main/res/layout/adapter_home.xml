<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5dp"
    android:layout_marginTop="@dimen/_5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/_5dp"
        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp"
        android:paddingTop="@dimen/_5dp">

        <com.toxsl.imageview.CircularImageView
            android:id="@+id/profileImageCIV"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:background="@mipmap/ic_drawer_profile_default"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_toLeftOf="@+id/editIV"
            android:layout_toRightOf="@+id/profileImageCIV"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:id="@+id/dateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2dp"
                android:textColor="#747474"
                android:textSize="@dimen/_12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/editIV"
            android:layout_width="wrap_content"
            android:background="@drawable/grey_edit_selector"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_8dp"
            android:src="@mipmap/ic_edit" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/messageLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/messageTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_15dp"
            android:paddingLeft="@dimen/_15dp"
            android:paddingRight="@dimen/_15dp"
            android:paddingTop="@dimen/_5dp"
            android:textColor="@color/button_color"
            android:textSize="@dimen/_14sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/imagesLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/caption1TV"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_5dp"
            android:textSize="@dimen/_16sp"
            android:textColor="@color/SkyBlue"
            android:padding="@dimen/_5dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/image1IV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/caption2TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:textSize="@dimen/_16sp"
                android:textColor="@color/SkyBlue"
                android:padding="@dimen/_5dp" />

            <ImageView
                android:id="@+id/image2IV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_height"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/caption3TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:textSize="@dimen/_16sp"
                android:textColor="@color/SkyBlue"
                android:padding="@dimen/_5dp"/>

            <ImageView
                android:id="@+id/image3IV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_height"
                android:scaleType="centerCrop" />


        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/captionVideoTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/_5dp"
        android:textSize="@dimen/_16sp"
        android:textColor="@color/SkyBlue"
        android:padding="@dimen/_5dp"
        android:background="@color/white"
        android:visibility="gone"/>
    <FrameLayout
        android:id="@+id/videoFL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:background="@color/black"
        android:visibility="gone">

        <ImageView
            android:id="@+id/videoThumbIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/ic_play" />

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="#f0f0f0" />
</LinearLayout>
